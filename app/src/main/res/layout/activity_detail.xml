<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".konfirmasi">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0">

    <ImageView
        android:id="@+id/imageMotor"
        android:layout_width="match_parent"
        android:layout_height="309dp"
        android:adjustViewBounds="true"
        android:src="" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="364dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="309dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explore" >


      <TextView
          android:id="@+id/merkMotor"
          style="@style/TextAppearance.MaterialComponents.Headline4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="20dp"
          android:text="Merk Motor"
          android:textColor="#000"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/layout_warna"
          style="@style/TextAppearance.MaterialComponents.Headline6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="173dp"
          android:layout_marginTop="97dp"
          android:textColor="#706E6E"
          android:text="Warna" />

      <TextView
          android:id="@+id/isi_warna"
          style="@style/TextAppearance.MaterialComponents.Headline5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="172dp"
          android:layout_marginTop="127dp"
          android:text="Hitam" />

      <TextView
          android:id="@+id/isi_plat"
          style="@style/TextAppearance.MaterialComponents.Headline5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/layout_plat"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="28dp"
          android:layout_marginTop="129dp"
          android:text="AB 1234 CD" />

      <TextView
          android:id="@+id/layout_plat"
          style="@style/TextAppearance.MaterialComponents.Headline6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/merkMotor"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="28dp"
          android:layout_marginTop="97dp"
          android:textColor="#706E6E"
          android:text="PLAT" />

      <TextView
          android:id="@+id/layout_tahun"
          style="@style/TextAppearance.MaterialComponents.Headline6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="284dp"
          android:layout_marginTop="96dp"
          android:textColor="#706E6E"
          android:text="Tahun Buat" />

      <TextView
          android:id="@+id/isi_tahun"
          style="@style/TextAppearance.MaterialComponents.Headline5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/layout_plat"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="285dp"
          android:layout_marginTop="127dp"
          android:text="2016" />

      <TextView
          android:id="@+id/layout_status"
          style="@style/TextAppearance.MaterialComponents.Headline6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/merkMotor"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="29dp"
          android:layout_marginTop="173dp"
          android:textColor="#706E6E"
          android:text="Status" />

      <TextView
          android:id="@+id/isi_status"
          style="@style/TextAppearance.MaterialComponents.Headline5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/layout_plat"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="29dp"
          android:layout_marginTop="206dp"
          android:text="Tersedia" />

      <TextView
          android:id="@+id/layout_harga"
          style="@style/TextAppearance.MaterialComponents.Headline6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="175dp"
          android:layout_marginTop="174dp"
          android:textColor="#706E6E"
          android:text="Harga" />

      <TextView
          android:id="@+id/isi_harga"
          style="@style/TextAppearance.MaterialComponents.Headline5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/layout_plat"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="173dp"
          android:layout_marginTop="210dp"
          android:text="Rp. 150.000,00/hari" />

      <Button
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentBottom="true"
          android:layout_marginEnd="78dp"
          android:layout_marginBottom="39dp"
          android:backgroundTint="#000"
          android:text="PILIH"/>
    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottom_navigation_menu" />

  </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>